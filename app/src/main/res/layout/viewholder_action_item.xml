<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/action_item_status"
            android:layout_width="@dimen/actionItemSize"
            android:layout_height="@dimen/actionItemSize"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/circle_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/action_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Graffiti"
            android:textColor="@android:color/primary_text_light"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/action_item_status"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/action_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - Boys Bathroom"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/action_item_title"
            app:layout_constraintStart_toStartOf="@+id/action_item_title" />

        <ImageView
            android:id="@+id/action_item_image"
            android:layout_width="131dp"
            android:layout_height="105dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_item_title"
            app:layout_constraintVertical_bias="0.741"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/action_item_description"
            android:layout_width="194dp"
            android:layout_height="109dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:text="This would be where the description of the action item would be written. maybe the boys in the bathroom really did a number on the stall because they got in a shipment of brand new sharpies"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.741"
            app:layout_constraintStart_toEndOf="@+id/action_item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.846" />

        <ImageButton
            android:id="@+id/dismiss_action_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_clear_black_24dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>