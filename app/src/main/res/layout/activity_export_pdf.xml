<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/exportBtn"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="16dp"
        android:onClick="export"
        android:text="Export"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="413dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxActionItems"
        android:layout_width="365dp"
        android:layout_height="70dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="6dp"
        android:text="Action Items"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/WalkthroughCommentsChkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseTxtView" />

    <CheckBox
        android:id="@+id/WalkthroughCommentsChkbox"
        android:layout_width="365dp"
        android:layout_height="70dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="6dp"
        android:text="Walkthrough Comments"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/PhotoChkBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxActionItems" />

    <CheckBox
        android:id="@+id/PhotoChkBox"
        android:layout_width="365dp"
        android:layout_height="70dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="295dp"
        android:text="Photos"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/exportBtn"
        app:layout_constraintEnd_toStartOf="@+id/WalkthroughCommentsChkbox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WalkthroughCommentsChkbox" />

    <TextView
        android:id="@+id/ChooseTxtView"
        android:layout_width="365dp"
        android:layout_height="74dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="23dp"
        android:text="Please select which items to include in your report:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxActionItems"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />
</android.support.constraint.ConstraintLayout>