<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/viewholder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="This is a title"
        android:textColor="@android:color/primary_text_light"
        android:visibility="gone" />


<android.support.v7.widget.CardView
    android:layout_below="@+id/viewholder_title"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    android:id="@+id/cardView">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/viewholder_landing_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginRight="@dimen/clearRightMargin"
            android:layout_marginTop="8dp"
            android:text="@string/last_modified" />

        <TextView
            android:id="@+id/viewholder_landing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginRight="@dimen/clearRightMargin" />

        <TextView
            android:id="@+id/viewholder_landing_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="@dimen/clearRightMargin" />

        <TextView
            android:id="@+id/viewholder_landing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Fall 2017"
            android:textSize="24sp" />

        <ProgressBar
            android:id="@+id/viewholder_landing_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:max="100"
            android:progress="50" />

    </FrameLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>
